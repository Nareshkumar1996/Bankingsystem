@model AccountViewModel

<form asp-action="Deposit" method="post">

    
    <div class="form-group">
        <label class="control-label">Please Enter Deposit Amount</label>
        <div class="col-md-5">
            <input asp-for="DepositAmount" class="form-control" />
            <span asp-validation-for="DepositAmount" class="text-danger"></span>
        </div>
    </div>

    <input type="submit" class="btn btn-primary" value="Submit" />
</form>