@model AccountViewModel


<form class="form-horizontal" method="post">
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="MobileNumber">Mobile Number:</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" asp-for="MobileNumber" id="mobileno" placeholder="Enter mobile number">
        </div>
    </div>
    <div>
        <label>Email</label>
        @Html.DropDownListFor(x => x.Network, AccountViewModel.GetNetworkList(), "Select Network", new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="RechargeAmount">Recharge Amount:</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" asp-for="RechargeAmount" id="rechargeamt" placeholder="Enter recharge amount">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>
